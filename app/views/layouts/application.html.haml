!!!5
%html
	%head
		= stylesheet_link_tag    'application'
		= javascript_include_tag 'application'
		= csrf_meta_tags
		%title
			itronaut - 
			= controller.controller_name.gsub('_', ' ').split(' ').each{|word| word.capitalize!}.join(' ')
			


	%body{ :class => if @content then @content.name else controller.controller_name end }
		#stage
			.header
				= render 'header' rescue nil
			.content
				= yield
			.footer
				= render 'footer' rescue nil
